@using OnlineBankApplication.Dto;
@model IEnumerable<TransactionDto>



<head>
    <title>All the Transactions</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>

<body>
    <div class="container mt-4">
        <h2>All Transactions</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>TransactionId</th>
                    <th>FromAccountName</th>
                    <th>ToAccountName</th>
                    <th>Amount</th>
                    <th>TransactionDate</th>
                    <th>FromAccountBalance</th>
                    <th>ToAccountBalance</th> 
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model)
                {
                    <tr>
                        <td>@transaction.TransactionId</td>
                        <td>@transaction.FromAccountName</td>
                        <td>@transaction.ToAccountName</td>
                        <td>@transaction.Amount</td>
                        <td>@transaction.TransactionDate</td>
                        <td>@transaction.FromAccountBal</td>
                        <td>@transaction.ToAccountBal</td>
                        <td>
                            <a href="@Url.Action("TransactionDetails", "Transaction", new { TransactionId = transaction.TransactionId })" class="btn btn-sm btn-warning">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</body>