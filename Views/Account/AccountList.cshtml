@model IEnumerable<Account> 
<head>
    <title>All Accounts</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h2>All Accounts</h2>
        <a href="@Url.Action("Create", "Account")" class="btn btn-primary mb-3">Create New</a>        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Balance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.AccountName</td>
                        <td>@account.Balance</td>
                        <td>
                            <a href="@Url.Action("Edit1", "Account", new { AccountName = account.AccountName })" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("Account", "Account", new { AccountName = account.AccountName })" class=" btn btn-primary-info">Details</a>
                            <a href="@Url.Action("Delete", "Account", new { accountName = account.AccountName })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
